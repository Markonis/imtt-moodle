{{^imtt}}
    <p><a href="{{auth_url}}">Connect with Google</a></p>
{{/imtt}}

{{#imtt}}
    <div ng-app="imtt">
        <div id="imtt-configuration-editor"
            data-pipelines='{{pipelines_json}}'
            data-imtt-configuration='{{configuration_json}}'
            data-imtt-id="{{id}}">

            <div class="row">
                <div class="col-sm-4">
                    <div class="well" v-for="(pipeline, index) in imttInstance.configuration.pipelines">
                        <div>
                            <button class="btn btn-default pull-right" v-on:click="removePipeline(index)">&times;</button>
                            <h4 v-text="pipeline.name"></h4>
                        </div>
                        <div class="form-group" v-for="param in pipeline.params">
                            <label v-text="param.label"></label>
                            <input type="text" class="form-control" v-model="param.value"/>
                        </div>
                    </div>

                    <hr/>

                    <div class="form-group">
                        <label>Add a pipeline</label>
                        <div class="row">
                            <div class="col-sm-9">
                                <select class="form-control" v-model="chosenPipeline">
                                    <option v-for="pipeline in editor.pipelines" v-bind:value="pipeline" v-text="pipeline.name"></option>
                                </select>
                            </div>
                            <div class="col-sm-3">
                                <button class="btn btn-default" v-on:click="addPipeline">Add</button>
                            </div>
                        </div>
                    </div>

                    <hr/>

                    <div>
                        <button class="btn btn-primary" v-on:click="save">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/imtt}}
